{
  "name": "guardstone-console",
  "version": "1.0.0",
  "description": "Enterprise SOC Command Console - PhishX Security Operations Center",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "docker:build": "docker build -t guardstone-console:latest .",
    "docker:run": "docker run -p 3000:3000 guardstone-console:latest",
    "k8s:deploy": "kubectl apply -f ../k8s/",
    "k8s:status": "kubectl get pods,svc,hpa",
    "helm:install": "helm install guardstone-console ./helm",
    "helm:upgrade": "helm upgrade guardstone-console ./helm",
    "helm:uninstall": "helm uninstall guardstone-console"
  },
  "dependencies": {
    "next": "14.2.35",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^4.4.5",
    "ws": "^8.14.2",
    "jsonwebtoken": "^9.0.3",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "axios": "^1.6.2",
    "react-hook-form": "^7.48.0",
    "@hookform/resolvers": "^3.3.2",
    "zod": "^3.22.4",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.1",
    "recharts": "^2.10.3",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "@sentry/nextjs": "^7.91.0",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.8",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.14.201",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.35",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "@playwright/test": "^1.40.1"
  }
}
